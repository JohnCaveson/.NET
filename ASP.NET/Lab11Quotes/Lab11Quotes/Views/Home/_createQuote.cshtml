@model Lab11Quotes.Models.Entities.Quote

<form id = "createQuoteForm" asp-action="Create" asp-controller="Quote">
    <div class="form-horizontal">
        <h4>Quote</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="TheQuote" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input id="quoteMeBro" asp-for="TheQuote" class="form-control" />
                <span asp-validation-for="TheQuote" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="WhoSaidIt" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input id="whoSad" asp-for="WhoSaidIt" class="form-control" />
                <span asp-validation-for="WhoSaidIt" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" id="submitQuoteCreate" value="Create" class="btn btn-default" />
                <input type="button" id="cancelQuoteCreate" value="Cancel" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
