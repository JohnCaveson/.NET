@model Project2.Models.ViewModels.SelectAllVM

@{
    ViewData["Title"] = "Project Selection";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AssignPersonProject">
    <div class="form-horizontal">
        <div class="form-group">
            <label for="projectId" class="control-label col-md-2">Select a Project:</label>
            <div class="col-md-10">
                <select name="projectId" id="projectId" class="form-control">
                    @foreach (var project in Model.ProjectNames)
                    {
                        <option value="@project.id">@project.ProjectName</option>
                    }
                </select>
            </div>
            <label for="roleId" class="control-label col-md-2">Select a Role:</label>
            <div class="col-md-10">
                <select name="roleId" id="roleId" class="form-control">
                    @foreach (var role in Model.RoleNames)
                    {
                        <option value="@role.id">@role.RoleName</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="hidden" name="personId" id="personId" value="@Model.Id"/>
                <input type="submit" value="Select Project" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

