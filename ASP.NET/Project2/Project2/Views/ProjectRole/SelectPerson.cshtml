@model IEnumerable<Project2.Models.ViewModels.SelectPersonVM>

@{
    ViewData["Title"] = "Person Selection";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Assign">
    <div class="form-horizontal">
        <div class="form-group">
            <label for="personId" class="control-label col-md-2">Select a Course:</label>
            <div class="col-md-10">
                <select name="personId" id="personId" class="form-control">
                    @foreach (var person in Model)
                    {
                        <option value="@person.PersonId">@person.Name</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Select Person" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>