@model Lab06HalloweenBaskets.Models.ViewModels.CreateCandyVM
@using Lab06HalloweenBaskets.Models.Entities

@{ 
    Basket basket = (Basket)ViewData["basket"];
    ViewData["Title"] = "Adding Candy to " + basket.Name;
}

<h2>@ViewData["Title"]</h2>
<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Enter candy information</h4>
        <hr />
        <input type="hidden" name="basketId" value="@basket.Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Calories" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Calories" class="form-control" />
                <span asp-validation-for="Calories" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

