@model Project3.Models.ViewModels.UserListVM
<form id="permForm" asp-action="GrantPermissions" asp-controller="GroceryList">
    <div id="createPrivUser" class="form-horizontal">
        <div class="form-group">
            <input id="listId" type="hidden" value="@Model.ListId" />
            <select id="selectValue" class="form-control">
                @foreach (var user in Model.AllNames)
                {
                    <option value="@user.Id">@user.FirstName @user.LastName</option>
                }
            </select>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input id="groceryCreate" type="submit" value="Save" class="btn btn-default" />
                <input id="cancelCreate" type="button" value="Cancel" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}