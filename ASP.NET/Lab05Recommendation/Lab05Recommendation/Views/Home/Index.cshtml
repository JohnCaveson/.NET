@model IEnumerable<Lab05Recommendation.Models.Entities.Person>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create" asp-controller="Person">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MiddleName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    Number Of Recommendations
                </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiddleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recommendation.Count)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Person", new {id = item.Id }) |
                @Html.ActionLink("Details", "Details", "Person", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", "Person", new { id = item.Id }) |
                @Html.ActionLink("Make Recommendation", "Create", "Recommendation", new {id = item.Id} )
            </td>
        </tr>
}
    </tbody>
</table>
